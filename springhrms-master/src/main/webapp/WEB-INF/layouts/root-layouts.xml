<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- Master -->
	<definition name="masterlayout" template="/WEB-INF/layouts/templates/masterLayout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/layouts/templates/header.jsp" />
		<put-attribute name="sideNavigation"
			value="/WEB-INF/layouts/templates/sideNavigation.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/layouts/templates/footer.jsp" />
	</definition>

	<!-- Login layout -->
	<definition name="loginlayout"
		template="/WEB-INF/layouts/templates/loginLayout.jsp">
	</definition>
	
	<!-- Exception Page layout -->
	<definition name="exceptionlayout"
		template="/WEB-INF/layouts/templates/exceptionsLayout.jsp">
	</definition>
</tiles-definitions>